{
  "name": "server",
  "version": "0.0.0",
  "description": "Realtime Markdown Editor API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "esbuild src/server.ts --bundle --platform=node --packages=external --outfile=dist/server.js --format=esm",
    "dev:esbuild": "pnpm run build --watch",
    "dev:start": "nodemon dist/server.js",
    "dev": "run-p dev:*",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "Ali Medhat",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "react-router-dom": "^7.6.3",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "yjs": "^13.6.27",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/lodash.debounce": "^4.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.23.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prisma": "^6.3.1",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.2.4"
  }
}